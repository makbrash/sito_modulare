# Bologna Marathon - Environment Configuration
# Copia questo file in .env e personalizza i valori

# Application
APP_NAME="Bologna Marathon"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/sito_modulare

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=bologna_marathon
DB_USERNAME=root
DB_PASSWORD=

# Security
AUTH_ENABLED=false
SESSION_LIFETIME=120
CSRF_PROTECTION=true

# Cache
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# Logging
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# API
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Email (future)
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@bolognamarathon.run
MAIL_FROM_NAME="${APP_NAME}"

# Social (future)
FACEBOOK_URL=
INSTAGRAM_URL=
TWITTER_URL=
YOUTUBE_URL=

