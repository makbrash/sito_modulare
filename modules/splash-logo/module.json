{
  "name": "splash-logo",
  "slug": "splash-logo",
  "aliases": ["splashLogo", "splash_logo"],
  "version": "1.0.0",
  "description": "Overlay animato con logo che appare all'inizio del caricamento pagina",
  "category": "layout",
  "author": "Bologna Marathon Team",
  "is_active": true,
  "component_path": "splash-logo/splash-logo.php",
  "default_config": {
    "logo_url": "assets/images/splash.svg",
    "duration": 2500,
    "logo_size": 100,
    "pulse_speed": 2
  },
  "assets": {
    "css": ["splash-logo/splash-logo.css"],
    "js": ["splash-logo/splash-logo.js"],
    "vendors": []
  },
  "dependencies": [],
  "ui_schema": {
    "logo_url": {
