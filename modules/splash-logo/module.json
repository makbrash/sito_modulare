      "default": "assets/images/splash.svg",
      "description": "Percorso del file SVG o immagine del logo"
    },
    "duration": {
      "type": "number",
      "label": "Durata (ms)",
      "placeholder": "2500",
      "required": true,
      "default": 2500,
      "min": 500,
      "max": 5000,
      "step": 100,
      "description": "Durata totale dello splash in millisecondi"
    },
    "logo_size": {
      "type": "number",
      "label": "Larghezza Logo (px)",
      "placeholder": "100",
      "required": true,
      "default": 100,
      "min": 50,
      "max": 500,
      "step": 10,
      "description": "Larghezza del logo in pixel"
    },
    "pulse_speed": {
      "type": "number",
      "label": "Velocità Lampeggio (s)",
      "placeholder": "2",
      "required": true,
      "default": 2,
      "min": 1,
      "max": 5,
      "step": 0.5,
      "description": "Velocità dell'animazione lampeggio in secondi"
