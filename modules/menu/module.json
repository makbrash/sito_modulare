{
  "name": "Menu Bologna Marathon",
  "slug": "menu",
  "version": "3.0.0",
  "description": "Menu moderno con search box AI, countdown timer e design elegante per Bologna Marathon",
  "component_path": "menu/menu.php",
  "css_class": "main-menu",
  "default_config": {
    "logo": "assets/images/logo-bologna-marathon.svg",
    "logo_alt": "Bologna Marathon",
    "marathon_title": "TERMAL BOLOGNA MARATHON",
    "countdown_date": "2024-04-14T09:00:00",
    "search_placeholder": "Chiedi a Ingrid",
    "menu_items": [
      { "label": "Home", "url": "#home", "target": "_self" },
      { "label": "La Gara", "url": "#gara", "target": "_self" },
      { "label": "Risultati", "url": "#risultati", "target": "_self" },
      { "label": "News", "url": "#news", "target": "_self" },
      { "label": "Contatti", "url": "#contatti", "target": "_self" }
    ]
  },
  "ui_schema": {
    "logo": {
      "type": "image",
      "label": "Logo",
      "placeholder": "URL del logo",
      "required": false
    },
    "logo_alt": {
      "type": "text",
      "label": "Alt Text Logo",
      "placeholder": "Testo alternativo per il logo"
    },
    "marathon_title": {
      "type": "text",
      "label": "Titolo Maratona",
      "placeholder": "TERMAL BOLOGNA MARATHON",
      "default": "TERMAL BOLOGNA MARATHON"
    },
    "countdown_date": {
      "type": "datetime",
      "label": "Data Countdown",
      "placeholder": "2024-04-14T09:00:00",
      "default": "2024-04-14T09:00:00",
      "help": "Data e ora della prossima maratona per il countdown"
    },
    "search_placeholder": {
      "type": "text",
      "label": "Placeholder Search Box",
      "placeholder": "Chiedi a Ingrid",
      "default": "Chiedi a Ingrid",
      "help": "Testo placeholder per la search box AI"
    },
    "menu_items": {
      "type": "array",
      "label": "Voci Menu",
      "item_schema": {
        "label": {
          "type": "text",
          "label": "Etichetta",
          "required": true
        },
        "url": {
          "type": "url",
          "label": "URL",
          "required": true
        },
        "target": {
          "type": "select",
          "label": "Target",
          "options": [
            { "value": "_self", "label": "Stessa Finestra" },
            { "value": "_blank", "label": "Nuova Finestra" }
          ]
        }
      }
    }
  },
  "aliases": ["navigation", "navbar"],
  "assets": {
    "css": ["modules/menu/menu.css"],
    "js": ["modules/menu/menu.js"],
    "vendors": []
  },
  "dependencies": [],
  "install": "menu/install.sql",
  "uninstall": "menu/uninstall.sql"
}

