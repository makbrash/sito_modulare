{
  "name": "Menu",
  "slug": "menu",
  "version": "2.0.0",
  "description": "Menu di navigazione responsive con logo e voci personalizzabili",
  "component_path": "menu/menu.php",
  "css_class": "main-menu",
  "default_config": {
    "logo": "assets/images/logo-bologna-marathon.svg",
    "logo_alt": "Bologna Marathon",
    "style": "horizontal",
    "sticky": true,
    "sticky_offset": "0px",
    "background": "transparent",
    "menu_items": [
      { "label": "Home", "url": "#home", "target": "_self" },
      { "label": "La Gara", "url": "#gara", "target": "_self" },
      { "label": "Risultati", "url": "#risultati", "target": "_self" },
      { "label": "News", "url": "#news", "target": "_self" },
      { "label": "Contatti", "url": "#contatti", "target": "_self" }
    ]
  },
  "ui_schema": {
    "logo": {
      "type": "image",
      "label": "Logo",
      "placeholder": "URL del logo",
      "required": false
    },
    "logo_alt": {
      "type": "text",
      "label": "Alt Text Logo",
      "placeholder": "Testo alternativo per il logo"
    },
    "style": {
      "type": "select",
      "label": "Stile Menu",
      "options": [
        { "value": "horizontal", "label": "Orizzontale" },
        { "value": "vertical", "label": "Verticale" },
        { "value": "hamburger", "label": "Hamburger Mobile" }
      ]
    },
    "sticky": {
      "type": "boolean",
      "label": "Menu Fisso"
    },
    "sticky_offset": {
      "type": "text",
      "label": "Offset Sticky",
      "placeholder": "es. 20px",
      "condition": { "depends_on": "sticky", "value": true }
    },
    "background": {
      "type": "color",
      "label": "Colore Sfondo",
      "default": "transparent"
    },
    "menu_items": {
      "type": "array",
      "label": "Voci Menu",
      "item_schema": {
        "label": {
          "type": "text",
          "label": "Etichetta",
          "required": true
        },
        "url": {
          "type": "url",
          "label": "URL",
          "required": true
        },
        "target": {
          "type": "select",
          "label": "Target",
          "options": [
            { "value": "_self", "label": "Stessa Finestra" },
            { "value": "_blank", "label": "Nuova Finestra" }
          ]
        }
      }
    }
  },
  "aliases": ["navigation", "navbar"],
  "assets": {
    "css": ["assets/scss/modules/_menu.scss"],
    "js": ["assets/js/modules/menu.js"],
    "vendors": []
  },
  "dependencies": [],
  "install": "menu/install.sql",
  "uninstall": "menu/uninstall.sql"
}

